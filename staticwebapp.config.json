{
    "trailingSlash": "auto",
    "routes": [
        {
            "route": "/admin",
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/aad"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        }
    ],
    "responseOverrides": {
        "401": {
            "rewrite": "/unauth.html",
            "statusCode": 200
        },
        "404": {
            "redirect": "/notfound.html"
        }
    },
    "navigationFallback": {
        "rewrite": "/notfound.html"
    }
}